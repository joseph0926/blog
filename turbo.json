{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", ".react-router", "build"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "db:gen": {
      "dependsOn": ["^db:gen"]
    },
    "db:push": {
      "dependsOn": ["^db:push"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
